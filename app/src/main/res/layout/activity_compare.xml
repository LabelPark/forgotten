<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">



    <TextView
        android:id="@+id/com_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/analysis_result"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/black"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="1.2dp"
        android:layout_marginLeft="1.2dp"
        />

    <ImageView
        android:id="@+id/com_sub_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/com_main_title"
        android:scaleType="fitXY"
        android:src="@drawable/dangerous_state_bar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/com_sub_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/sendEmailButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/upload_button_shape"
            android:text="@string/send_email"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />
    </RelativeLayout>

</RelativeLayout>